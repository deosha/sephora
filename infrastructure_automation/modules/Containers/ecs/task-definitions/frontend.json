[
  {
    "name": "sephora-frontend",
    "image": "880758882511.dkr.ecr.${region}.amazonaws.com/sephora:${tag}",
    "memory": 256,
    "cpu": 128,
    "portMappings": [
      {
        "hostPort": 0,
        "containerPort": 3000,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "sephora-frontend-${env}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]